@model Telefon_Rehberi.Models.Entities.Kisiler
@{
    ViewData["Title"] = "Guncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Kişi Düzenle</h1>

<form class="form-horizontal" method="post" action="/Kisi/Guncelle/">
    @Html.HiddenFor(x=>x.Id)
    <div class-"form-group">

        @Html.LabelFor(x=>x.Ad)
        @Html.TextBoxFor(x=>x.Ad,null,new{ @class="form-control"})
    </div>

    <div class-"form-group">

        @Html.LabelFor(x=>x.Soyad)
        @Html.TextBoxFor(x=>x.Soyad,null,new{ @class="form-control"})
    </div>
    <div class-"form-group">

        @Html.LabelFor(x=>x.Firma)
        @Html.TextBoxFor(x=>x.Firma,null,new{ @class="form-control"})
    </div>
    <div class-"form-group">

        @Html.LabelFor(x=>x.Telefon)
        @Html.TextBoxFor(x=>x.Telefon,null,new{ @class="form-control"})
    </div>
    <div class-"form-group">

        @Html.LabelFor(x=>x.Email)
        @Html.TextBoxFor(x=>x.Email,null,new{ @class="form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(x=>x.İletisimId)
        @Html.DropDownListFor(x=>x.İletisimId, ViewBag.Sehirler as SelectList, new{ @class= "form-control"})

    </div>


    <input type="submit" class="btn btn-primary" value="Güncelle" />

</form>

